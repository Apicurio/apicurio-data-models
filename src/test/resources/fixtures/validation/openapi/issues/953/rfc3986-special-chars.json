        "summary": "Custom method with colon (Google Cloud style)",
        "operationId": "customAction",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/files/{id}/download~draft": {
      "get": {
