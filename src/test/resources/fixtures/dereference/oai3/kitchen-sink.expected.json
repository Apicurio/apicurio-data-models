{
	"openapi": "3.0.2",
	"paths": {
		"/foo": {
			"get": {
				"requestBody": {
					"$ref": "#/components/requestBodies/MyRequestBody"
				}
			},
			"put": {
				"parameters": [
					{
						"$ref": "#/components/parameters/Param"
					}
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/Widget"
							},
							"examples": {
								"user": {
									"$ref": "#/components/examples/Example"
								}
							}
						}
					}
				},
				"callbacks": {
					"myWebhook": {
						"$ref": "#/components/callbacks/TheCallback"
					}
				},
				"responses": {
					"200": {
						"headers": {
							"X-Rate-Limit": {
								"$ref": "#/components/headers/Header"
							}
						},
						"links": {
							"link2": {
								"$ref": "#/components/links/SomeLink"
							}
						}
					},
					"500": {
						"$ref": "#/components/responses/PetResponse"
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"Widget": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					}
				}
			}
		},
		"responses": {
			"PetResponse": {
				"description": "a pet to be returned",
				"content": {
					"application/json": {
						"schema": {
							"type": "string"
						}
					}
				}
			}
		},
		"parameters": {
			"Param": {
				"name": "username",
				"in": "path",
				"description": "username to fetch",
				"required": true,
				"schema": {
					"type": "string"
				}
			}
		},
		"examples": {
			"Example": {
				"summary": "Example 1 Summary",
				"description": "Example 1 description.",
				"value": "Example1Value"
			}
		},
		"requestBodies": {
			"MyRequestBody": {
				"description": "The request body.",
				"content": {
					"application/json": {
						"schema": {
							"$ref": "#/components/schemas/Widget"
						}
					}
				},
				"required": true
			}
		},
		"headers": {
			"Header": {
				"description": "The number of allowed requests in the current period",
				"schema": {
					"type": "integer"
				}
			}
		},
		"securitySchemes": {
            "APIKey": {
                "type": "apiKey",
                "name": "api_key",
                "in": "header"
            },
            "BASIC": {
                "$ref": "#/components/securitySchemes/BASIC1"
            },
            "BASIC1": {
                "scheme": "basic",
                "type": "http"
            }
		},
		"links": {
			"SomeLink": {
				"operationRef": "#paths~12.0~1repositories~1{$response.body#/username}",
				"operationId": "getRepositoriesByOwner",
				"parameters": {
					"username": "$response.body#/username"
				},
				"description": "The link1 description.",
				"server": {
					"url": "https://development.gigantic-server.com/v1",
					"description": "Development server"
				}
			}
		},
		"callbacks": {
			"TheCallback": {
				"$request.header#/put-url": {
					"put": {
						"requestBody": {
							"description": "Callback payload",
							"content": {
								"application/json": {
									"schema": {
										"$ref": "#/components/schemas/Widget"
									}
								}
							}
						},
						"responses": {
							"200": {
								"description": "webhook successfully processed and no retries will be performed"
							}
						}
					}
				}
			}
		}
	}
}