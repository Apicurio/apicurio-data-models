{
  "openapi": "3.0.2",
  "paths": {
    "/pets": {
      "get": {
        "summary": "List Pets",
        "description": "Returns all pets from the system that the user has access to",
        "operationId": "listPets",
        "responses": {
          "200": {
            "description": "A simple string response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "name"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "address": {
                      "$ref": "#/components/schemas/Address"
                    },
                    "age": {
                      "format": "int32",
                      "minimum": 0,
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}